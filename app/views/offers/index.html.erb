<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1562862917-cadaa6073261?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1354&q=80);">
  <div class="container">
    <h1>AirBnBuddy</h1>
    <p>Find the buddy you need.</p>
  </div>
</div>
<div class="container title-hr">
  <div class="row justify-content-between mb-2">
    <h3>All offers</h3>
    <div id="search-bar">
      <%= form_tag offers_path, method: :get, class: "form-inline" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find what you need"
        %>
        <%= submit_tag "Search", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>


<div id="cont-cards">
  <div class="cards">
    <% @offers.each do |offer| %>
      <div class="card card-<%= rand(1..5) %>">
        <div class="card__icon d-flex">
          <div class="align-self-center pr-3">
            <%= cl_image_tag offer.user.photo.key, class: "avatar-large fas fa-bolt card__exit", alt: "avatar-large" %>
          </div>
          <div class="notification-content text-dark align-self-center">
            <p><%= offer.user.nickname %> - <em><%= offer.city %></em></p>
          </div>
        </div>
        <h2 class="card__title">
          <%= offer.title %>
        </h2>
        <p class="card__apply">
          <a class="card__link"><%= link_to "See full offer", "/offers/#{offer.id}", class:"card__link"%> <i class="fas fa-arrow-right" style="color:white"></i></a>
        </p>
      </div>
    <% end %>
  </div>
</div>
