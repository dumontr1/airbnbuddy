<div class="container mt-5">
  <div class="title">
    <div class="top">
      <h1><%= @offer.title %></h1>
      <%= @offer.price %>

    </div>
  </div>
</div>
<div class="container mt-5">
  <p><%= @offer.details %></p>
</div>
<div class="container">
  <div class="destroy">
  <% if current_user == @offer.user %>
    <%= link_to "Delete",
              offer_path(@offer),
              method: :delete,
              data: { confirm: "Are you sure?" }%>
  <% end %>
  </div>
</div>
